<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/newPolicyFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/layout_personal_information" />

        <include layout="@layout/layout_personal_location" />

        <include layout="@layout/layout_confirmation_personal_information" />

        <include layout="@layout/layout_personal_driver_license" />

        <include layout="@layout/layout_auto_information" />

        <include layout="@layout/layout_auto_diagnostic_card" />

        <include layout="@layout/layout_confirmation_auto_information" />

        <include layout="@layout/layout_policy_information" />

        <include layout="@layout/layout_confirmation_policy_information" />

        <include layout="@layout/layout_confirm_application_for_purchase" />

    </ViewFlipper>

    <include
        layout="@layout/progress_layout"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>