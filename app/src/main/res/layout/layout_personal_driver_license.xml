<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Тип документа о регистрации" />

        <Spinner
            android:id="@+id/spinnerAutoDocumentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/auto_document_type" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Серия" />

        <EditText
            android:id="@+id/editTextAutoDocumentSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0123" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Номер" />

        <EditText
            android:id="@+id/editTextAutoDocumentNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="456789" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="Дата выдачи" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6">

            <EditText
                android:id="@+id/editTextAutoDocumentDateOfIssue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="01.01.1970"
                android:maxLength="10" />

            <ImageButton
                android:id="@+id/imageButtonOpenCalendarForDateAutoDocumentDateOfIssue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_calendar" />

        </LinearLayout>

        <Button
            android:id="@+id/nextPersonalDriverLicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Продолжить" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>